
.goods_detail{
  padding-bottom: 90rpx;
}
.goods_detail swiper{
  width: 100vw;
  height: 400rpx;
  text-align: center;
}
.goods_detail swiper image{
  width: 50%;
}

.goods_detail .goods_price{
  font-size: 36rpx;
  font-weight: 700;
  color: var(--themeColor);
}

.goods_detail .info_box{
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
}

.goods_detail .goods_name_box{
  padding: 6rpx 10rpx 6rpx 6rpx;
  flex: 5;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient:vertical;
  border-right: 1px #999 solid;
}

.goods_detail .collect_box{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.goods_detail .info_title{
  margin-top: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--themeColor);
  padding: 20rpx 0 20rpx 10rpx;
}

.goods_detail .bottom_box{
  width: 100vw;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  height: 90rpx;
  border-top: 1px #bbb solid;
}
.three{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  position: relative;
}
.three button{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.two{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.join_car{
  background: #ffa500;
}
.now_buy{
  background: var(--themeColor);
}