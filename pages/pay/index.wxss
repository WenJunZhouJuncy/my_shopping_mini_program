.pay{
  padding-bottom: 90rpx;
}
.site_info_box{
  padding: 10rpx 20rpx;
}
.site_info_box .person_info_box{
  display: flex;
  justify-content: space-between;
  line-height: 36rpx;
}

.site_info_box .site_info{
  line-height: 36rpx;
}

.car_txt{
  font-size: 36rpx;
  color: var(--themeColor);
  font-weight: 600;
  border-top: 2px var(--themeColor) solid;
  border-bottom: 2px var(--themeColor) solid;
  padding: 30rpx;
}

.goods_list{
  width: 100vw;
}
.goods_item{
  display: flex;
  padding: 20rpx 10rpx;
  border-bottom: 1px #999 solid;
}

.img_box{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.img_box image{
  width: 80%;
}
.info_box{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 10rpx;
}
.info{
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.info_inner_box{
  display: flex;
  justify-content: space-between;
}

.price{
  color: var(--themeColor);
  font-size: 28rpx;
  font-weight: 600;
}

.clearing_box{
  width: 100vw;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1px var(--themeColor) solid;
}
.payment{
  font-size: 32rpx;
  font-weight: 600;
  padding: 0 30rpx;
  line-height: 90rpx;
  background: var(--themeColor);
  color: #fff;
}

.clearing{
  text-align: right;
  padding-right: 30rpx;
}
.todle{
  font-weight: 600;
}
.money{
  color: var(--themeColor);
}